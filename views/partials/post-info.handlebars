<div class="card mb-6">
    <header>
        <div class="column">
            <p>
            <a href="/post/{{id}}">{{title}}</a>
            </p>
        </div>

        <div class="column">
            <span class=""> </span>
        </div>
    </header>

    <div class="card">
        <div class="content">
            {{post_content}}
        </div>
        <div class="is-pulled right">
            <b>{{user.username}}</b>
            <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
            {{format_date created_at}} 
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</div>