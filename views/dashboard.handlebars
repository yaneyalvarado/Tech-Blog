{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> dashboard-post-info post}}
        </li>
        {{/each}}
    </ol>
</section>
{{else}}
<section>
    <h3>Nothing has been posted</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add new post</a></button>