<article>
    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
    <h2 class="title mt-5">edit post</h2>
    <form action="edit-post-form">
    <div>
        <label for="post-title">post title:</label>
        <input class="input" name= "post-title" type="text" value="{{post.title}}">
    </div>
    <div>
        <label for="post-content">post content:</label>
        <input class="textArea" name="post_content" type="text" value="{{post.post_content}}">
    </div>
    <div class="is-pulled-right">
        You have created this on {{format_date post.created_at}}
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button works">save post</button>
    <button type="button" class="button doesn`t-work">erase post</button>
  </form>
</article>

{{> comments post.comments}}

